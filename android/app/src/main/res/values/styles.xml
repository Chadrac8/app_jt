<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorPrimary">#860505</item>
        <item name="colorPrimaryDark">#650404</item>
        <item name="colorAccent">#860505</item>
    </style>
    
    <!-- LaunchTheme to be used when the Flutter Engine is being initialized -->
    <style name="LaunchTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/launch_background</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">false</item>
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
    </style>
    
    <!-- NormalTheme to be used after Flutter UI is initialized -->
    <style name="NormalTheme" parent="AppTheme">
        <item name="android:windowBackground">?android:colorBackground</item>
    </style>
</resources>
