<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Include user preferences and settings -->
        <include domain="sharedpref" path="FlutterSharedPreferences.xml"/>
        <include domain="sharedpref" path="firebase_prefs.xml"/>
        
        <!-- Exclude sensitive data -->
        <exclude domain="sharedpref" path="auth_tokens.xml"/>
        <exclude domain="database" path="sensitive.db"/>
    </cloud-backup>
    
    <device-transfer>
        <!-- Allow transfer of user settings -->
        <include domain="sharedpref" path="FlutterSharedPreferences.xml"/>
        
        <!-- Exclude authentication data for security -->
        <exclude domain="sharedpref" path="auth_tokens.xml"/>
    </device-transfer>
</data-extraction-rules>